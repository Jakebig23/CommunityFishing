@model IEnumerable<CommunityFishing.Models.FishInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FishName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LegalLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LegalLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeasonStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeasonEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LegalLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LegalLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeasonStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeasonEnd)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FishId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FishId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FishId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
